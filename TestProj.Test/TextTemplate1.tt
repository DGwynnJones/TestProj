<#@ template debug="false" hostspecific="true" language="C#" #>
<#@ assembly name="System.Core" #>
<#@ import namespace="System.IO" #>
<#@ import namespace="System.Linq" #>
<#@ import namespace="System.Text" #>
<#@ assembly name="$(SolutionDir)TestProj.Test\bin\$(ConfigurationName)\TestProj.Test.dll" #>
<#@ import namespace="System.Collections.Generic" #>
<#@ output extension=".cmd" #>
@ECHO OFF
@ECHO OFF
CLS

<#
var packageRoot = new FileInfo(this.Host.ResolvePath("")).Directory;
var reportgeneratorExe = packageRoot.GetFiles("ReportGenerator.exe", SearchOption.AllDirectories);
var opencoverExe = packageRoot.GetFiles("OpenCover.Console.exe", SearchOption.AllDirectories);
var nunitExe = packageRoot.GetFiles("nunit3-console.exe", SearchOption.AllDirectories);
#>

ECHO RG: <#= packageRoot  #>
ECHO Script generated at: <#= DateTime.Now.ToString() #>

"<#= opencoverExe[0].FullName #>" -filter:"+[TestProj*]* -[TestProj.Test]*" -target:"<#= nunitExe[0].FullName #>" -targetargs:"TestProj.Test.dll" -output:"_CodeCoverageResult.xml" -register:user

"<#= reportgeneratorExe[0].FullName #>" "-reports:_CodeCoverageResult.xml" "-targetdir:Report"

Report\index.htm
